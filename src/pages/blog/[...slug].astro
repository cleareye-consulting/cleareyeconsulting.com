---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout>
	{post.data.canonical && (
		<link slot="head" rel="canonical" href={post.data.canonical} />
	)}
	<article class="max-w-3xl mx-auto">
		<div class="mb-8">
			<a href="/blog" class="text-brand-blue hover:text-brand-blue-dark font-medium inline-flex items-center gap-1 mb-8">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
				</svg>
				Back to blog
			</a>
			
			<div class="flex items-center gap-3 mb-4">
				<span class="text-xs font-bold uppercase tracking-wider text-brand-blue bg-blue-50 px-2 py-1 rounded">
					{post.data.audience}
				</span>
				<time datetime={post.data.pubDate.toISOString()} class="text-slate-500">
					{post.data.pubDate.toLocaleDateString('en-us', {
						year: 'numeric',
						month: 'long',
						day: 'numeric',
					})}
				</time>
			</div>
			
			<h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6 leading-tight">
				{post.data.title}
			</h1>
			
			{post.data.heroImage && (
				<div class="mb-10">
					<div class="rounded-2xl overflow-hidden shadow-lg">
						<Image
							src={post.data.heroImage}
							alt=""
							width={1200}
							height={675}
							class="w-full h-auto"
						/>
					</div>
					{post.data.photoCredit && (
						<p class="text-sm text-slate-500 mt-2 text-center" set:html={post.data.photoCredit} />
					)}
				</div>
			)}
		</div>

		<div class="prose prose-slate prose-lg max-w-none
			prose-headings:text-slate-900 prose-headings:font-bold
			prose-a:text-brand-blue hover:prose-a:text-brand-blue-dark
			prose-strong:text-slate-900
			prose-img:rounded-xl">
			<Content />
		</div>

		{post.data.canonical && (
			<p class="mt-12 text-sm text-slate-500 italic">
				Originally published on <a href={post.data.canonical} class="text-brand-blue hover:text-brand-blue-dark">Medium</a>.
			</p>
		)}

		<footer class="mt-16 pt-8 border-t border-slate-200">
			<div class="bg-slate-50 rounded-2xl p-8 text-center">
				<h3 class="text-xl font-bold text-slate-900 mb-2">Need help with a project?</h3>
				<p class="text-slate-600 mb-6">Let's talk about how ClearEye Consulting can help you achieve your goals.</p>
				<a href="/about" class="inline-block bg-brand-blue text-white px-8 py-3 rounded-lg font-bold hover:bg-brand-blue-dark transition-colors">
					Contact Us
				</a>
			</div>
		</footer>
	</article>
</Layout>
